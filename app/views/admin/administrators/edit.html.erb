<div class="space-y-6">
  <!-- Page Title -->
  <div class="flex items-center space-x-4">
    <%= link_to admin_administrator_path(@administrator.id), class: "btn btn-ghost btn-sm" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Administrator
    <% end %>
    <h1 class="text-3xl font-bold">Edit Administrator</h1>
  </div>

  <!-- Form -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <%= form_with model: [:admin, @administrator], local: true, class: "space-y-6" do |form| %>
        <!-- Error Messages -->
        <% if @administrator.errors.any? %>
          <div class="alert alert-error">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h3 class="font-medium">Please fix the following errors:</h3>
              <ul class="list-disc list-inside mt-2">
                <% @administrator.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <!-- Name -->
        <div class="form-control">
          <%= form.label :name, class: "label" do %>
            <span class="label-text font-medium">Name<% if field_required?(@administrator, :name) %> <span class="text-red-500">*</span><% end %></span>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "input input-bordered w-full"
          }.merge(field_required?(@administrator, :name) ? { required: true } : {}) %>
          <% if @administrator.errors[:name].any? %>
            <label class="label">
              <span class="label-text-alt text-red-500"><%= @administrator.errors[:name].first %></span>
            </label>
          <% end %>
        </div>

        <!-- Password -->
        <div class="form-control">
          <%= form.label :password, class: "label" do %>
            <span class="label-text font-medium">New Password <small class="text-gray-500">(leave blank to keep current)</small></span>
          <% end %>
          <%= form.password_field :password, {
            placeholder: "Enter new password...",
            class: "input input-bordered w-full"
          } %>
          <% if @administrator.errors[:password].any? %>
            <label class="label">
              <span class="label-text-alt text-red-500"><%= @administrator.errors[:password].first %></span>
            </label>
          <% end %>
        </div>

        <!-- Password Confirmation -->
        <div class="form-control">
          <%= form.label :password_confirmation, class: "label" do %>
            <span class="label-text font-medium">Password Confirmation</span>
          <% end %>
          <%= form.password_field :password_confirmation, {
            placeholder: "Confirm new password...",
            class: "input input-bordered w-full"
          } %>
          <% if @administrator.errors[:password_confirmation].any? %>
            <label class="label">
              <span class="label-text-alt text-red-500"><%= @administrator.errors[:password_confirmation].first %></span>
            </label>
          <% end %>
        </div>

        <!-- Role (only for super admins) -->
        <% if current_admin.can_manage_administrators? %>
          <div class="form-control">
            <%= form.label :role, class: "label" do %>
              <span class="label-text font-medium">Role <span class="text-red-500">*</span></span>
            <% end %>
            <%= form.select :role, Administrator.role_options, { selected: @administrator.role }, {
              class: "select select-bordered w-full",
              required: true
            } %>
            <% if @administrator.errors[:role].any? %>
              <label class="label">
                <span class="label-text-alt text-red-500"><%= @administrator.errors[:role].first %></span>
              </label>
            <% end %>
          </div>
        <% end %>

        <!-- Metadata -->
        <div class="border-t pt-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Created At</label>
              <p class="text-sm text-gray-900"><%= @administrator.created_at.strftime("%B %d, %Y at %H:%M") %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Last Updated</label>
              <p class="text-sm text-gray-900"><%= @administrator.updated_at.strftime("%B %d, %Y at %H:%M") %></p>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_administrator_path(@administrator.id), class: "btn btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Administrator", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
