<div class="min-h-screen bg-gray-100">
  <div class="py-10">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-6">
        <!-- Header -->
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Order #<%%= @order.id %></h1>
            <p class="text-gray-600 mt-2">Order details and payment information</p>
          </div>
          <div class="flex items-center space-x-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
              <%%= case @order.status
                  when 'paid' then 'bg-green-100 text-green-800'
                  when 'failed' then 'bg-red-100 text-red-800'
                  when 'pending' then 'bg-yellow-100 text-yellow-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%%= @order.display_status %>
            </span>
          </div>
        </div>

        <!-- Order Details -->
        <div class="card">
          <div class="card-body">
            <h2 class="text-xl font-semibold text-gray-900 mb-6">Order Information</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Product</label>
                <p class="text-lg text-gray-900"><%%= @order.product_name %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Amount</label>
                <p class="text-lg text-gray-900"><%%= number_to_currency(@order.amount, unit: @order.currency.upcase + ' ') %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Customer Name</label>
                <p class="text-lg text-gray-900"><%%= @order.customer_name %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Customer Email</label>
                <p class="text-lg text-gray-900"><%%= @order.customer_email %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Order Date</label>
                <p class="text-lg text-gray-900"><%%= @order.created_at.strftime("%B %d, %Y at %l:%M %p") %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                <%% case @order.status %>
                <%% when 'paid' %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">Payment Completed</span>
                <%% when 'pending' %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">Payment Processing</span>
                <%% else %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">Payment Failed</span>
                <%% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex justify-between">
          <div>
            <%%= link_to "â† Back to Home", '/', class: "btn-ghost" %>
          </div>
          
          <%% if @order.status == 'pending' %>
            <div class="space-x-3">
              <%%= link_to "Complete Payment", 
                  new_payment_path(order_id: @order.id),
                  class: "btn-primary px-6 py-3 text-lg",
                  method: :post %>
              <%%= link_to "Cancel Order", 
                  order_path(@order),
                  class: "btn-primary",
                  method: :delete,
                  data: { confirm: "Are you sure you want to cancel this order?" } %>
            </div>
          <%% end %>
        </div>
      </div>
    </div>
  </div>
</div>