<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="bg-white shadow-xl rounded-lg overflow-hidden">
    <div class="bg-gradient-to-r from-green-500 to-emerald-600 px-8 py-12 text-center">
      <h1 class="text-4xl font-bold text-white mb-2">Payment Successful!</h1>
      <p class="text-xl text-green-100">Thank you for your order</p>
    </div>

    <div class="px-8 py-6">
      <div class="text-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-900 mb-2">Order #<%%= @order.id %></h2>
        <p class="text-gray-600">Your payment has been processed successfully</p>
      </div>

      <div class="bg-gray-50 rounded-lg p-6 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="font-semibold text-gray-900 mb-3">Customer Information</h3>
            <div class="space-y-2">
              <div>
                <span class="text-sm text-gray-500">Name:</span>
                <p class="font-medium"><%%= @order.customer_name %></p>
              </div>
              <div>
                <span class="text-sm text-gray-500">Email:</span>
                <p class="font-medium"><%%= @order.customer_email %></p>
              </div>
            </div>
          </div>
          
          <div>
            <h3 class="font-semibold text-gray-900 mb-3">Order Details</h3>
            <div class="space-y-2">
              <div>
                <span class="text-sm text-gray-500">Product:</span>
                <p class="font-medium"><%%= @order.product_name %></p>
              </div>
              <div>
                <span class="text-sm text-gray-500">Amount:</span>
                <p class="font-bold text-lg text-green-600"><%%= @order.formatted_amount %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%%= link_to "View Order Details", @order, class: "btn btn-outline btn-primary" %>
        <%%= link_to "Create New Order", new_order_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>