<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="bg-white shadow-xl rounded-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-8 text-center">Create New Order</h1>

    <%%= form_with model: @order, local: true, class: "space-y-6" do |form| %>
      <%%= render 'shared/error_messages', model: @order %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="form-group">
          <%%= form.label :customer_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%%= form.text_field :customer_name,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500",
              placeholder: "Enter your full name",
              required: true %>
        </div>

        <div class="form-group">
          <%%= form.label :customer_email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%%= form.email_field :customer_email,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500",
              placeholder: "your@email.com",
              required: true %>
        </div>
      </div>

      <div class="form-group">
        <%%= form.label :product_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%%= form.text_field :product_name,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Product or service name",
            required: true %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="form-group">
          <%%= form.label :amount, "Amount", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%%= form.number_field :amount,
              step: 0.01,
              min: 0.50,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500",
              placeholder: "0.00",
              required: true %>
        </div>

        <div class="form-group">
          <%%= form.label :currency, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%%= form.select :currency,
              options_for_select([
                ['US Dollar (USD)', 'usd'],
                ['Euro (EUR)', 'eur'],
                ['British Pound (GBP)', 'gbp']
              ], 'usd'),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white" } %>
        </div>
      </div>

      <div class="pt-6">
        <div class="flex items-center justify-between">
          <%%= form.submit "Create Order",
              class: "btn-primary px-8 py-3 text-lg" %>
        </div>
      </div>

      <div class="mt-6 p-4 bg-blue-50 rounded-lg">
        <p class="text-sm text-blue-700">
          <strong>Next Step:</strong> After creating your order, you'll be able to proceed with secure payment.
        </p>
      </div>
    <%% end %>
  </div>
</div>
