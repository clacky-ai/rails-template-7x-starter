<div class="min-h-screen bg-gray-100 flex items-center justify-center">
  <div class="max-w-md mx-auto bg-white shadow-xl rounded-lg overflow-hidden">
    <div class="px-6 py-8 text-center">
      <!-- Error Icon -->
      <div class="w-16 h-16 mx-auto mb-4 bg-red-100 rounded-full flex items-center justify-center">
        <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </div>

      <!-- Title -->
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Payment Failed</h1>
      <p class="text-gray-600 mb-6">Unfortunately, your payment could not be processed.</p>

      <!-- Error Details -->
      <%% if @error_message %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
          <p class="text-sm text-red-700">
            <strong>Error:</strong> <%%= @error_message %>
          </p>
        </div>
      <%% end %>

      <!-- Order Details -->
      <%% if @order %>
        <div class="bg-gray-50 rounded-lg p-4 mb-6 text-left">
          <h3 class="font-semibold text-gray-900 mb-3">Order Details</h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600">Order ID:</span>
              <span class="font-medium">#<%%= @order.id %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Product:</span>
              <span class="font-medium"><%%= @order.product_name %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Amount:</span>
              <span class="font-medium"><%%= number_to_currency(@order.amount, unit: @order.currency.upcase + ' ') %></span>
            </div>
          </div>
        </div>
      <%% end %>

      <!-- Action Buttons -->
      <div class="space-y-3">
        <%% if @order %>
          <% if @for_test %>
          <%%= link_to "Try Payment Again", new_order_path, class: "btn-primary w-full px-6 py-3 text-lg" %>
          <% else %>
          <%%= link_to "Try Payment Again", pay_order_path(@order), class: "btn-primary w-full px-6 py-3 text-lg", method: :get %>
          <% end %>
          <%%= link_to "View Order Details", @order, class: "w-full inline-flex justify-center items-center border border-gray-300 text-gray-700 hover:bg-gray-50 font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
        <%% else %>
          <% if @for_test %>
          <%%= link_to "Create New Order", new_order_path, class: "btn-primary w-full" %>
          <% else %>
          <%%= link_to "Back to Orders", orders_path, class: "btn-primary w-full" %>
          <% end %>
        <%% end %>
      </div>

      <!-- Help Text -->
      <div class="mt-6 text-xs text-gray-500">
        <p>If you continue to experience issues, please contact our support team.</p>
      </div>
    </div>
  </div>
</div>