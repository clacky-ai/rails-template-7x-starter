<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%%= link_to "← Back to Orders", admin_orders_path, class: "btn-ghost" %>
      <h1 class="text-3xl font-bold text-gray-900">Order #<%%= @order.id %></h1>
    </div>
    
    <div class="flex items-center space-x-3">
      <%%= link_to "Delete Order", admin_order_path(@order), method: :delete,
          data: { confirm: "Are you sure you want to delete this order? This action cannot be undone." },
          class: "btn-error" %>
    </div>
  </div>

  <!-- Order Status -->
  <div class="flex items-center space-x-4">
    <span class="text-lg font-medium text-gray-700">Status:</span>
    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
      <%%= case @order.status
          when 'paid' then 'bg-green-100 text-green-800'
          when 'failed' then 'bg-red-100 text-red-800'
          when 'pending' then 'bg-yellow-100 text-yellow-800'
          else 'bg-gray-100 text-gray-800'
          end %>">
      <%%= @order.display_status %>
    </span>
  </div>

  <!-- Order Details -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Customer Information -->
    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Customer Information</h2>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <p class="text-lg text-gray-900"><%%= @order.customer_name %></p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <p class="text-lg text-gray-900">
              <a href="mailto:<%%= @order.customer_email %>" class="text-blue-600 hover:text-blue-800">
                <%%= @order.customer_email %>
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Order Information -->
    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Order Information</h2>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Product</label>
            <p class="text-lg text-gray-900"><%%= @order.product_name %></p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Amount</label>
            <p class="text-lg text-gray-900"><%%= number_to_currency(@order.amount, unit: @order.currency.upcase + ' ') %></p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Currency</label>
            <p class="text-lg text-gray-900"><%%= @order.currency.upcase %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Payment Information -->
  <%% if @order.stripe_payment_intent_id %>
    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Payment Information</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Stripe Payment Intent ID</label>
            <p class="text-lg font-mono text-gray-900"><%%= @order.stripe_payment_intent_id %></p>
          </div>
          
          <%% if @order.stripe_payment_method_id %>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Payment Method ID</label>
              <p class="text-lg font-mono text-gray-900"><%%= @order.stripe_payment_method_id %></p>
            </div>
          <%% end %>
        </div>
      </div>
    </div>
  <%% end %>

  <!-- Timestamps -->
  <div class="card">
    <div class="card-body">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Timestamps</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Created At</label>
          <p class="text-lg text-gray-900"><%%= @order.created_at.strftime("%B %d, %Y at %l:%M %p") %></p>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Last Updated</label>
          <p class="text-lg text-gray-900"><%%= @order.updated_at.strftime("%B %d, %Y at %l:%M %p") %></p>
        </div>
      </div>
    </div>
  </div>
</div>