<div class="container mt-4 mx-auto">
<div class="space-y-6">
  <!-- Page Title and Actions -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%%= link_to <%= plural_name %>_path, class: "btn btn-ghost btn-sm" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to <%= humanized_plural_name %>
      <%% end %>
      <h1 class="text-3xl font-bold"><%= humanized_name %> Details</h1>
    </div>

    <div class="flex space-x-3">
<% if selected_actions.include?('edit') -%>
      <%%= link_to edit_<%= singular_name %>_path(@<%= singular_name %>.id), class: "btn btn-primary" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit <%= humanized_name %>
      <%% end %>
<% end -%>
<% if selected_actions.any? { |action| %w[new edit].include?(action) } -%>
      <%%= link_to <%= singular_name %>_path(@<%= singular_name %>.id), method: :delete,
          data: { confirm: "Are you sure you want to delete this <%= singular_name %>?" },
          class: "btn btn-error" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete <%= humanized_name %>
      <%% end %>
<% end -%>
    </div>
  </div>

  <!-- <%= humanized_name %> Content -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="space-y-6">
<% model_attributes.each do |attribute| -%>
        <!-- <%= attribute.name.humanize %> -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= attribute.name.humanize %></label>
<% if attribute.type.to_s == 'text' -%>
          <div class="prose max-w-none">
            <%%= <%= display_value_for(attribute, "@#{singular_name}") %> %>
          </div>
<% elsif attribute.type.to_s == 'boolean' -%>
          <span class="badge <%%= @<%= singular_name %>.<%= attribute.name %> ? 'badge-success' : 'badge-error' %>">
            <%%= <%= display_value_for(attribute, "@#{singular_name}") %> %>
          </span>
<% else -%>
          <p class="text-lg text-gray-900"><%%= <%= display_value_for(attribute, "@#{singular_name}") %> %></p>
<% end -%>
        </div>

<% end -%>
        <!-- Metadata -->
        <div class="border-t pt-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Created At</label>
              <p class="text-sm text-gray-900"><%%= @<%= singular_name %>.created_at.strftime("%B %d, %Y at %H:%M") %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Last Updated</label>
              <p class="text-sm text-gray-900"><%%= @<%= singular_name %>.updated_at.strftime("%B %d, %Y at %H:%M") %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
