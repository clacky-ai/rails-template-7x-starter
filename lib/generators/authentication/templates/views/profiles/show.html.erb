<div class="min-h-screen bg-gray-100">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <!-- Page Title -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Profile Center</h1>
        <p class="text-gray-600 mt-2">Manage your account information</p>
      </div>

      <!-- User Information Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Basic Information -->
        <div class="card">
          <div class="card-body">
            <h2 class="text-xl font-semibold mb-4 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
              </svg>
              Basic Information
            </h2>

            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Name
                </label>
                <div class="text-lg"><%= @user.name %></div>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Email
                </label>
                <div class="text-lg"><%= @user.email %></div>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Account Status
                </label>
                <div class="flex items-center">
                  <% if @user.verified? %>
                    <div class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      Verified
                    </div>
                  <% else %>
                    <div class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                      </svg>
                      Unverified
                    </div>
                  <% end %>
                </div>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Login Method
                </label>
                <% if @user.password_digest.present? %>
                  <div class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 border border-gray-300">
                    Email & Password
                  </div>
                <% else %>
                  <div class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-300">
                    OAuth Provider
                  </div>
                <% end %>
              </div>
            </div>

            <div class="mt-6">
              <%= link_to "Edit Profile", edit_profile_path, class: "btn-primary" %>
            </div>
          </div>
        </div>

        <!-- Security Settings -->
        <div class="card">
          <div class="card-body">
            <h2 class="text-xl font-semibold mb-4 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
              </svg>
              Security Settings
            </h2>

            <% unless @user.verified? %>
              <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg mb-4">
                <div class="flex">
                  <svg class="w-5 h-5 text-blue-400 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                  </svg>
                  <p class="text-sm text-blue-700">Please verify your email address to secure your account.</p>
                </div>
              </div>
            <% end %>

            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Password
                </label>
                <% if @user.password_digest.present? %>
                  <%= link_to "Change Password", edit_password_profile_path, class: "btn-ghost text-sm" %>
                <% else %>
                  <button class="bg-gray-300 text-gray-500 font-medium py-1 px-3 rounded cursor-not-allowed text-sm">Change Password</button>
                  <p class="text-sm text-gray-500 mt-1">Not available for OAuth accounts</p>
                <% end %>
              </div>
            </div>

            <div class="mt-6">
              <%= link_to "Manage Sessions", devices_session_path, class: "btn-ghost" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Sign Out -->
      <div class="mt-8 text-center">
        <%= link_to "Sign Out", sign_out_path, method: :delete, class: "btn-ghost" %>
      </div>
    </div>
  </div>
</div>
