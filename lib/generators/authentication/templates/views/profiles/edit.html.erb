<div class="min-h-screen bg-gray-100">
  <div class="py-10">
    <div class="max-w-3xl mx-auto sm:px-6 lg:px-8">
      <div class="bg-white shadow-xl rounded-lg overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
          <h1 class="text-2xl font-bold text-gray-900 mb-6">Edit Profile</h1>

          <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "space-y-6" do |form| %>
            <%= render 'shared/error_messages', model: @user %>

            <div class="mb-4">
              <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                Name
              <% end %>
              <%= form.text_field :name, required: true, autocomplete: "name",
                      class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if @user.errors[:name].any?}" %>
              <% if @user.errors[:name].any? %>
                <div class="mt-1">
                  <span class="text-sm text-red-500"><%= @user.errors[:name].first %></span>
                </div>
              <% end %>
            </div>

            <div class="mb-4">
              <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                Email
              <% end %>
              <%= form.email_field :email, required: true, autocomplete: "email",
                      class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if @user.errors[:email].any?}" %>
              <% if @user.errors[:email].any? %>
                <div class="mt-1">
                  <span class="text-sm text-red-500"><%= @user.errors[:email].first %></span>
                </div>
              <% else %>
                <div class="mt-1">
                  <span class="text-sm text-blue-600">Email verification required after changes</span>
                </div>
              <% end %>
            </div>

            <div class="flex justify-end space-x-3">
              <%= form.submit "Save Changes", class: "btn-primary" %>
              <%= link_to "Cancel", profile_path, class: "btn-ghost" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>