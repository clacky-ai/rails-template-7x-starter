<div class="min-h-screen bg-gray-100">
  <div class="py-10">
    <div class="max-w-3xl mx-auto sm:px-6 lg:px-8">
      <div class="bg-white shadow-xl rounded-lg overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
          <h1 class="text-2xl font-bold text-gray-900 mb-6">Change Password</h1>

          <%= form_with model: @user, url: update_password_profile_path, method: :patch, local: true, class: "space-y-6" do |form| %>
            <%= render 'shared/error_messages', model: @user %>

            <div class="mb-4">
              <%= form.label :current_password, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                Current Password
              <% end %>
              <%= form.password_field :current_password, required: true, autocomplete: "current-password",
                      class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
              <div class="mt-1">
                <span class="text-sm text-blue-600">Please enter your current password to confirm identity</span>
              </div>
            </div>

            <div class="relative my-6">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-300"></div>
              </div>
            </div>

            <div class="mb-4">
              <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                New Password
              <% end %>
              <%= form.password_field :password, required: true, autocomplete: "new-password",
                      class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if @user.errors[:password].any?}" %>
              <% if @user.errors[:password].any? %>
                <div class="mt-1">
                  <span class="text-sm text-red-500"><%= @user.errors[:password].first %></span>
                </div>
              <% else %>
                <div class="mt-1">
                  <span class="text-sm text-blue-600">At least <%= User::MIN_PASSWORD %> characters</span>
                </div>
              <% end %>
            </div>

            <div class="mb-4">
              <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                Confirm New Password
              <% end %>
              <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password",
                      class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if @user.errors[:password_confirmation].any?}" %>
              <% if @user.errors[:password_confirmation].any? %>
                <div class="mt-1">
                  <span class="text-sm text-red-500"><%= @user.errors[:password_confirmation].first %></span>
                </div>
              <% else %>
                <div class="mt-1">
                  <span class="text-sm text-blue-600">Please re-enter your new password</span>
                </div>
              <% end %>
            </div>

            <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
              <div class="flex">
                <svg class="w-5 h-5 text-yellow-400 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                <p class="text-sm text-yellow-700">
                  <strong>Important:</strong> You will be signed out of all your other devices after changing your password.
                </p>
              </div>
            </div>

            <div class="flex justify-end space-x-3">
              <%= form.submit "Update Password", class: "btn-primary" %>
              <%= link_to "Cancel", profile_path, class: "btn-ghost" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>