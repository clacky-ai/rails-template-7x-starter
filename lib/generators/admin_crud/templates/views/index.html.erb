<div class="space-y-6">
  <!-- Page Title and Actions -->
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold"><%= humanized_plural_name %> Management</h1>
    <%%= link_to new_admin_<%= singular_name %>_path, class: "btn-primary" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
      </svg>
      New <%= humanized_name %>
    <%% end %>
  </div>

  <!-- <%= humanized_plural_name %> Table -->
  <div class="card">
    <div class="p-0">
      <%% if @<%= plural_name %>.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th>ID</th>
<% display_fields.each do |field| -%>
<% if field[:type] == :attribute -%>
                <th><%= field[:attribute].name.humanize %></th>
<% elsif field[:type] == :enum -%>
                <th><%= field[:enum_name].humanize %></th>
<% elsif field[:type] == :association -%>
                <th><%= field[:association][:name].to_s.humanize %></th>
<% end -%>
<% end -%>
                <th>Created At</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <%% @<%= plural_name %>.each do |<%= singular_name %>| %>
                <tr>
                  <td class="font-mono text-sm"><%%= <%= singular_name %>.id %></td>
<% display_fields.each_with_index do |field, index| -%>
<% if field[:type] == :attribute -%>
<% attribute = field[:attribute] -%>
                  <td<% if attribute.type.to_s == 'text' %> class="max-w-xs"<% elsif index == 0 %> class="font-semibold"<% end %>>
<% if index == 0 -%>
                    <%%= link_to <%= truncate_value_for(attribute, singular_name) %>, admin_<%= singular_name %>_path(<%= singular_name %>.id), class: "text-blue-600 hover:text-blue-800 underline" %>
<% elsif attribute.type.to_s == 'text' -%>
                    <div class="truncate">
                      <%%= <%= truncate_value_for(attribute, singular_name) %> %>
                    </div>
<% else -%>
                    <%%= <%= truncate_value_for(attribute, singular_name) %> %>
<% end -%>
                  </td>
<% elsif field[:type] == :enum -%>
                  <td>
<% if index == 0 -%>
                    <%%= link_to <%= truncate_value_for_enum(field[:enum_name], singular_name) %>, admin_<%= singular_name %>_path(<%= singular_name %>.id), class: "text-blue-600 hover:text-blue-800 underline" %>
<% else -%>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      <%%= <%= truncate_value_for_enum(field[:enum_name], singular_name) %> %>
                    </span>
<% end -%>
                  </td>
<% elsif field[:type] == :association -%>
<% association = field[:association] -%>
                  <td>
<% if index == 0 -%>
                    <%%= link_to <%= truncate_value_for_association(association, singular_name) %>, admin_<%= singular_name %>_path(<%= singular_name %>.id), class: "text-blue-600 hover:text-blue-800 underline" %>
<% else -%>
                    <%%= <%= truncate_value_for_association(association, singular_name) %> %>
<% end -%>
                  </td>
<% end -%>
<% end -%>
                  <td class="text-sm text-gray-600">
                    <%%= <%= singular_name %>.created_at.strftime("%Y-%m-%d %H:%M") %>
                  </td>
                  <td class="text-center">
                    <div class="flex justify-center space-x-2">
                      <%%= link_to admin_<%= singular_name %>_path(<%= singular_name %>.id), class: "p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded transition-colors" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                      <%% end %>
                      <%%= link_to edit_admin_<%= singular_name %>_path(<%= singular_name %>.id), class: "p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded transition-colors" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                      <%% end %>
                      <%%= link_to admin_<%= singular_name %>_path(<%= singular_name %>.id), method: :delete,
                          data: { confirm: "Are you sure you want to delete this <%= singular_name %>?" },
                          class: "p-2 text-red-600 hover:text-red-800 hover:bg-red-50 rounded transition-colors" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                      <%% end %>
                    </div>
                  </td>
                </tr>
              <%% end %>
            </tbody>
          </table>
        </div>
      <%% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No <%= plural_name %></h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating a new <%= singular_name %>.</p>
          <div class="mt-6">
            <%%= link_to new_admin_<%= singular_name %>_path, class: "btn-primary" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              New <%= humanized_name %>
            <%% end %>
          </div>
        </div>
      <%% end %>
    </div>
  </div>

  <!-- Pagination -->
  <%% if @<%= plural_name %>.respond_to?(:current_page) %>
    <div class="flex justify-center">
      <%%= paginate @<%= plural_name %> %>
    </div>
  <%% end %>
</div>