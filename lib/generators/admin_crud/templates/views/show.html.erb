<div class="space-y-6">
  <!-- Page Title and Actions -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%%= link_to admin_<%= plural_name %>_path, class: "btn-ghost text-sm" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to <%= humanized_plural_name %>
      <%% end %>
      <h1 class="text-3xl font-bold"><%= humanized_name %> Details</h1>
    </div>

    <div class="flex space-x-3">
      <%%= link_to edit_admin_<%= singular_name %>_path(@<%= singular_name %>.id), class: "btn-primary" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit <%= humanized_name %>
      <%% end %>
      <%%= link_to admin_<%= singular_name %>_path(@<%= singular_name %>.id), method: :delete,
          data: { confirm: "Are you sure you want to delete this <%= singular_name %>?" },
          class: "btn-error" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete <%= humanized_name %>
      <%% end %>
    </div>
  </div>

  <!-- <%= humanized_name %> Content -->
  <div class="card">
    <div class="card-body">
      <div class="space-y-6">
<% all_form_fields.each do |field| -%>
<% if field[:type] == :attribute -%>
<% attribute = field[:attribute] -%>
        <!-- <%= attribute.name.humanize %> -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= attribute.name.humanize %></label>
<% if attribute.type.to_s == 'text' -%>
          <div class="prose max-w-none">
            <%%= <%= display_value_for(attribute, "@#{singular_name}") %> %>
          </div>
<% elsif attribute.type.to_s == 'boolean' -%>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%%= @<%= singular_name %>.<%= attribute.name %> ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%%= <%= display_value_for(attribute, "@#{singular_name}") %> %>
          </span>
<% else -%>
          <p class="text-lg text-gray-900"><%%= <%= display_value_for(attribute, "@#{singular_name}") %> %></p>
<% end -%>
        </div>
<% elsif field[:type] == :enum -%>
        <!-- <%= field[:enum_name].humanize %> -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= field[:enum_name].humanize %></label>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 border border-gray-300">
            <%%= <%= display_value_for_enum(field[:enum_name], "@#{singular_name}") %> %>
          </span>
        </div>
<% elsif field[:type] == :association -%>
<% association = field[:association] -%>
        <!-- <%= association[:name].to_s.humanize %> -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2"><%= association[:name].to_s.humanize %></label>
          <p class="text-lg text-gray-900"><%%= <%= display_value_for_association(association, "@#{singular_name}") %> %></p>
        </div>
<% end -%>

<% end -%>
        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">ID</label>
              <p class="text-lg font-mono"><%%= @<%= singular_name %>.id %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Created At</label>
              <p class="text-lg"><%%= @<%= singular_name %>.created_at.strftime("%B %d, %Y at %l:%M %p") %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Updated At</label>
              <p class="text-lg"><%%= @<%= singular_name %>.updated_at.strftime("%B %d, %Y at %l:%M %p") %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>