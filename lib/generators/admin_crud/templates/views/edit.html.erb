<%% content_for :title, "Edit <%= humanized_name %>" %>

<div class="max-w-2xl mx-auto">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%%= link_to admin_<%= singular_name %>_path(@<%= singular_name %>.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to <%= humanized_name %>
    <%% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Edit <%= humanized_name %></h1>
  </div>

  <!-- Form -->
  <div class="card">
    <div class="card-body">
      <%%= form_with model: [:admin, @<%= singular_name %>], local: true, class: "space-y-6" do |form| %>
        <%%= render 'shared/error_messages', model: @<%= singular_name %> %>

<% all_form_fields.each do |field| -%>
<% if field[:type] == :attribute -%>
<% attribute = field[:attribute] -%>
        <!-- <%= attribute.name.humanize %> -->
<% if attribute.type.to_s == 'boolean' -%>
        <div class="mb-4">
          <label class="flex items-center cursor-pointer">
            <%%= form.<%= form_field_for(attribute) %> :<%= attribute.name %>,
                  class: "mr-3 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700" %>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300"><%= attribute.name.humanize %></span>
          </label>
        </div>
<% else -%>
        <div class="mb-4">
          <%%= form.label :<%= attribute.name %>, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            <%= attribute.name.humanize %><%% if field_required?(@<%= singular_name %>, :<%= attribute.name %>) %> <span class="text-red-500">*</span><%% end %>
          <%% end %>
          <%%= form.<%= form_field_for(attribute) %> :<%= attribute.name %>, {
<% if attribute.type.to_s == 'text' -%>
            rows: 5,
<% end -%>
            placeholder: "Enter <%= attribute.name.humanize.downcase %>...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@<%= singular_name %>, :<%= attribute.name %>) ? { required: true } : {}) %>
          <%% if @<%= singular_name %>.errors[:<%= attribute.name %>].any? %>
            <p class="text-sm text-red-500 mt-1"><%%= @<%= singular_name %>.errors[:<%= attribute.name %>].first %></p>
          <%% end %>
        </div>
<% end -%>
<% elsif field[:type] == :enum -%>
        <!-- <%= field[:enum_name].humanize %> -->
        <div class="mb-4">
          <%%= form.label :<%= field[:enum_name] %>, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            <%= field[:enum_name].humanize %><%% if field_required?(@<%= singular_name %>, :<%= field[:enum_name] %>) %> <span class="text-red-500">*</span><%% end %>
          <%% end %>
          <%%= form.select :<%= field[:enum_name] %>, 
              options_for_select([['Select <%= field[:enum_name].humanize %>', '']] + <%= enum_options_for_select(field[:enum_name], field[:enum_values]).inspect %>, @<%= singular_name %>.<%= field[:enum_name] %>),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white" } %>
          <%% if @<%= singular_name %>.errors[:<%= field[:enum_name] %>].any? %>
            <p class="text-sm text-red-500 mt-1"><%%= @<%= singular_name %>.errors[:<%= field[:enum_name] %>].first %></p>
          <%% end %>
        </div>
<% elsif field[:type] == :association -%>
<% association = field[:association] -%>
        <!-- <%= association[:name].to_s.humanize %> -->
        <div class="mb-4">
          <%%= form.label :<%= association[:foreign_key] %>, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            <%= association[:name].to_s.humanize %><%% if field_required?(@<%= singular_name %>, :<%= association[:name] %>) %> <span class="text-red-500">*</span><%% end %>
          <%% end %>
          <%%= form.select :<%= association[:foreign_key] %>, 
              options_for_select([['Select <%= association[:name].to_s.humanize %>', '']] + <%= association_options_method(association) %>, @<%= singular_name %>.<%= association[:foreign_key] %>),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white" } %>
          <%% if @<%= singular_name %>.errors[:<%= association[:foreign_key] %>].any? %>
            <p class="text-sm text-red-500 mt-1"><%%= @<%= singular_name %>.errors[:<%= association[:foreign_key] %>].first %></p>
          <%% end %>
        </div>
<% end -%>

<% end -%>
        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%%= link_to admin_<%= singular_name %>_path(@<%= singular_name %>.id), class: "btn-ghost" do %>
            Cancel
          <%% end %>
          <%%= form.submit "Update <%= humanized_name %>", class: "btn-primary" %>
        </div>
      <%% end %>
    </div>
  </div>
</div>